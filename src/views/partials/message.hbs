 {{#if message}}
       <div class="container p-4">
           <div class="row">
               <div class="col-md-5 mx-auto">
                  <div class="alert alert-success" role="alert">
                       {{message}}
                  </div>
               </div>
           </div>
       </div>

    {{/if}}

{{#if error}}
    <div class="container p-4">
           <div class="row">
               <div class="col-md-5 mx-auto">
                  <div class="alert alert-danger" role="alert">
                       {{error}}
                  </div>
               </div>
           </div>
       </div>
{{/if}}

{{#if login_error}}
    <div class="container p-4">
           <div class="row">
               <div class="col-md-5 mx-auto">
                  <div class="alert alert-danger" role="alert">
                       {{login_error}}
                  </div>
               </div>
           </div>
       </div>
{{/if}}


