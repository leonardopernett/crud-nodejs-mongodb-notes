<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card ">
            <div class="card-header lead text-white bg-dark text-center">
                <h3>Edit Note</h3>
            </div>
            <div class="card-body">
               <form action="/notes/edit/{{note._id}}?_method=PUT" method="post">
               <input type="hidden" name="_method" value="PUT">
                  <div class="form-group">
                      <input type="text" name="title" value={{note.title}}  class="form-control" autofocus>
                  </div>
                   <div class="form-group">
                      <textarea name="description" class="form-control"  rows="3">{{note.description}}</textarea>
                  </div>
                  <button type="submit" class="btn btn-warning">update Note</button>
               </form>
            </div>
        </div>
    </div>
</div>