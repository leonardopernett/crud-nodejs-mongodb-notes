<div class="row">
    {{#each notes}}
        <div class="col-md-3">
           <div class="card">
               <div class="card-body text-center">
                     <h4 class="d-flex justify-content-between align-items-center">
                         {{title}} <a href="/notes/edit/{{_id}}"><i class="fa fa-edit"></i></a>
                    </h4>  
                    <hr>
                   <p>{{description}}</p>
                   <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                      <button type="submit" class="btn btn-danger btn-block btn-sm">delete</button>
                   </form>
               </div>
           </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
           <div class="card">
               <div class="card-body text-center">
                   <h3>Welcome {{user.name}}</h3>
                   <h4>You don't have a note create</h4>
                   <a href="/notes/add" class="btn btn-primary">Create one</a>
               </div>
           </div>
        </div>
    {{/each}}
</div>